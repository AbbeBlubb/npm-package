  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.1",
    "babel-loader": "^8.2.2",
    "declaration-bundler-webpack-plugin": "^1.0.3",
    "parcel-bundler": "1.12.3",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.3",
