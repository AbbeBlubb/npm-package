{
  "name": "@abbeblubb/react-library-ts",
  "description": "Project to use for linking the NPM lib for developing of the NPM lib",
  "main": "src/exporter.js",
  "scripts": {
    "dev": "parcel index.html --open",
    "build:app": "parcel build index.html",

    "transpile-umd": "rm -rf _bundles && webpack",
